* {
    background-color:   #d2eaf0;
    border-color:       White;
    text-color:         #1f1f1f;
    font:               "Hack 12";
    alternate-active-background: #daeff2;
}
window {
    anchor:     north;
    margin: 24px 26px 24px 26px;
    location:   north;
    width:      100%;
    padding:    4px;
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}
prompt {
   font:       "Hack bold 12";
   entry: "itre";
}
listview {
    layout:     vertical;
    spacing:    5px;
    lines:      7;
}
entry {
    expand:     false;
    width:      10em;
}
element {
    padding: 0px 2px;
}
element selected {
    background-color: #bcd7dd;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
