[options]
suppress_default_binds = true
overlay = true
overlay_font = hack:10
overlay_position_bottom = true
overlay_background_color = #000000
overlay_text_color = #cccccc
background = #232627

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
i = prev
e = next
l = prev 10
a = next 10
<Left>  = prev
<Right> = next
<Up>    = prev 10
<Down>  = next 10

gg = goto 1
<Shift+G> = goto -1

# Zooming
<plus>  = zoom  1
<minus> = zoom -1

# Other commands
d = overlay
c = center
s = scaling next
<Shift+S> = upscaling next
z = zoom actual
b = exec cp $imv_current_file ~/.config/imv/wallpaper && notify-send "Wallpaper set" && swaybg -m fill -i ~/.config/imv/wallpaper &
q = quit
x = quit

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90
# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1

# Panning (move image inside window)
#j = pan 0 -50
#k = pan 0 50
#h = pan 50 0
#l = pan -50 0

#r = reset
#p = exec echo $imv_current_file
#f = fullscreen
